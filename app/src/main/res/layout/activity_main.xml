<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/ic_machine_learning"
        android:padding="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        />

    <TextView
        android:id="@+id/txt_view_dislpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="النص هيتعرض هنا"
        android:textSize="@dimen/_17ssp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        />

    <Button
        android:id="@+id/btn_capture_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="صور الصورة"
        android:textSize="@dimen/_17ssp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/bacground_capture_image"
        />

    <Button
        android:id="@+id/btn_detect_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="شوف النص"
        android:textSize="@dimen/_17ssp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/background_detect_text"
        />


</LinearLayout>